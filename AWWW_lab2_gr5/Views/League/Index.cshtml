@model IEnumerable<League>
@{
    ViewData["Title"] = "League";
}

<div>
    <div class="row">
        <div class="col-6">
            <h1>League list</h1>
        </div>
        <div class="col-6 text-end pt-0">
            <a asp-controller="League" asp-action="Create" class="btn btn-dark">Add new league</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(Model => Model.Name)</th>
            <th>@Html.DisplayNameFor(Model => Model.Country)</th>
            <th>@Html.DisplayNameFor(Model => Model.Level)</th>
            <th>Edit/Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Country)</td>
                <td>@Html.DisplayFor(modelItem => item.Level)</td>
                <td class="col-2">
                    <div>
                        <a asp-controller="League" asp-action="Edit" asp-route-id="@item.Id"
                           class="btn btn-dark">Edit</a>
                        <a asp-controller="League" asp-action="Delete" asp-route-id="@item.Id"
                           class="btn btn-danger">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

