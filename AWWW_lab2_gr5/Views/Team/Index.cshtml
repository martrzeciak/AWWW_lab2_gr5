@model IEnumerable<Team>

<div>
    <div class="row">
        <div class="col-6">
            <h1>Team list</h1>
        </div>
        <div class="col-6 text-end pt-0">
            <a asp-controller="Team" asp-action="Create" class="btn btn-dark">Add new team</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped align-middle" style="width:100%">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(Model => Model.Name)</th>
            <th>@Html.DisplayNameFor(Model => Model.Country)</th>
            <th>@Html.DisplayNameFor(Model => Model.City)</th>
            <th>@Html.DisplayNameFor(Model => Model.FundationDate)</th>
            <th>@Html.DisplayNameFor(Model => Model.League.Name)</th>
            <th>Edit/Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>    
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Country)</td>
                <td>@Html.DisplayFor(modelItem => item.City)</td>
                <td>@Html.DisplayFor(modelItem => item.FundationDate)</td>
                <td>@Html.DisplayFor(modelItem => item.League.Name)</td>
                <td class="col-2">
                    <div>
                        <a asp-controller="Team" asp-action="Edit" asp-route-id="@item.Id"
                        class="btn btn-dark">Edit</a>
                        <a asp-controller="Team" asp-action="Delete" asp-route-id="@item.Id"
                        class="btn btn-danger">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>