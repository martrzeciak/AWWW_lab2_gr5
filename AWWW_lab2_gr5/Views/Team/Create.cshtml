@model Team

<form method="post">
    <div>
        <div>
            <h2>Add player</h2>
        </div>
        <div class="mb-2">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-2">
            <label asp-for="Country"></label>
            <input asp-for="Country" class="form-control" />
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>
        <div class="mb-2">
            <label asp-for="City"></label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="mb-2">
            <label asp-for="FundationDate"></label>
            <input asp-for="FundationDate" class="form-control" />
            <span asp-validation-for="FundationDate" class="text-danger"></span>
        </div>
        <div class="mb-4 form-group">
            <label asp-for="League" class="control-label"></label>
            <select asp-for="LeagueId" class="form-select" asp-items="ViewBag.LeagueList">
                <option value="">-- Select Team --</option>
            </select>
            <span asp-validation-for="LeagueId" class="text-danger"></span>
        </div>
        <div class="text-end">
            <button type="submit" class="btn btn-dark" style="width:100px">Add</button>
            <a asp-controller="Team" asp-action="Index" class="btn btn-secondary" style="width:100px">Back</a>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
